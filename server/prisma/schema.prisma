generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
}

enum AuthProvider {
  LOCAL
  GOOGLE
  FACEBOOK
}

model Role {
  id    String @id @default(uuid())
  name  String @unique // MANAGER, STORE_KEEPER
  users User[]
}

model User {
  id           String       @id @default(uuid())
  email        String       @unique
  passwordHash String?
  provider     AuthProvider @default(LOCAL)
  providerId   String?
  
  roleId       String
  role         Role         @relation(fields: [roleId], references: [id])

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}
